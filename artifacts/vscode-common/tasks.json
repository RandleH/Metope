{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "envFile": "${workspaceFolder}/setup.env",
    "tasks": [
        {
            "label": "run_emulator",
            "type": "shell",
            "command": "echo 'QEMU Started'; qemu-system-arm -M netduinoplus2 -cpu cortex-m4 -nographic -s -S --semihosting-config enable=on -kernel ${workspaceFolder}/build/model1.elf",
            "isBackground": true,
            "problemMatcher":[
                {
                    "pattern": [
                        {
                            "regexp":".",
                            "file":1,
                            "location":2,
                            "message":3
                        }
                    ],
                    "background":{
                        "activeOnStart":true,
                        "beginsPattern":".",
                        "endsPattern":"QEMU Started"
                    }
                }
            ]
        }
    ]
}